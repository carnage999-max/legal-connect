# Backend Django Environment Variables
# Copy this to /home/ubuntu/legal-connect/backend/.env

# Django Configuration
DEBUG=False
ALLOWED_HOSTS=legalconnect.com,www.legalconnect.com,api.legalconnect.com,localhost,127.0.0.1
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL (optional, more robust for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/legal_connect

# Domain Configuration
DOMAIN=legalconnect.com
SECURE_DOMAIN=https://legalconnect.com
API_DOMAIN=https://api.legalconnect.com

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_SECURITY_POLICY={
    "default-src": ("'self'",),
    "script-src": ("'self'", "'unsafe-inline'"),
    "style-src": ("'self'", "'unsafe-inline'"),
    "img-src": ("'self'", "data:", "https:"),
    "font-src": ("'self'", "data:"),
    "connect-src": ("'self'", "https://api.legalconnect.com"),
}

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://legalconnect.com,https://www.legalconnect.com,https://api.legalconnect.com
CORS_ALLOW_CREDENTIALS=True

# Frontend URL Configuration
FRONTEND_URL=https://legalconnect.com
INTAKE_URL=https://legalconnect.com/intake

# Email Configuration (optional, for password resets and notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@legalconnect.com

# AWS Configuration (optional, for S3 storage)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=legal-connect-uploads
AWS_S3_REGION_NAME=us-east-1

# Application Settings
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,xls,xlsx
MAX_FILE_SIZE=50000000  # 50MB in bytes

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=  # Optional: for error tracking

# API Keys and External Services
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
